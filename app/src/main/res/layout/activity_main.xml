<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragmentContainerView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/on_off"
        android:layout_width="95dp"
        android:layout_height="35dp"
        android:text="On &amp; Off"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/connect_disconnect"
        android:layout_width="262dp"
        android:layout_height="34dp"
        android:layout_below="@id/on_off"
        android:text="Connect &amp; Disconnect"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/scan_wifi"
        android:layout_width="76dp"
        android:layout_height="34dp"
        android:layout_below="@+id/connect_disconnect"
        android:text="Scan"
        android:textSize="25dp" />

    <FrameLayout
        android:id="@+id/flfragment"
        android:name="com.example.wifiapp.OnOffFragment"
        android:layout_width="match_parent"
        android:layout_height="624dp"
        android:layout_below="@id/scan_wifi"
        android:layout_marginTop="18dp" />

</RelativeLayout>